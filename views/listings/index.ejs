<% layout("/layouts/boilerplate") %>


    <h3>All Listings</h3>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% for(let listing of allListings) { %>
            <div class=" card col listing-card " >
                <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                    <div class="card h-100 shadow-sm">
                        <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image"  style="height:18rem">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text" style="color: #222222;">
                                <b><%= listing.title %></b> <br>
                                &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/night
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
